# Environment Variables Template for Docker Compose
# Copy this file to .env and fill in your values
# Aligned with official Codex CLI - OpenAI only

# OpenAI Authentication (choose one method)
# Method 1: OpenAI API Key (recommended for automation)
OPENAI_API_KEY=your_openai_api_key_here

# Method 2: ChatGPT OAuth (for subscription users)
# CHATGPT_OAUTH_TOKEN=your_oauth_token_here
# Note: OAuth flow is handled automatically by Codex CLI

# Codex CLI Configuration
CODEX_MODEL=gpt-4
CODEX_PROVIDER=openai
CODEX_APPROVAL_MODE=suggest

# Server Configuration
MAX_CONCURRENT_SESSIONS=20
SESSION_TIMEOUT=3600
CONTAINER_CPU_LIMIT=1.0
CONTAINER_MEMORY_LIMIT=512m
LOG_LEVEL=INFO

# MCP Server Configuration
MCP_HOST=localhost
MCP_PORT=8000